{
  "name": "node-firebase-push-notification",
  "version": "1.0.0",
  "description": "An npm package that simplifies sending push notifications using Firebase Cloud Messaging (FCM) in Node.js applications.",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "nodejs",
    "firebase",
    "typescript",
    "fcm",
    "push-notifications"
  ],
  "repository": {
