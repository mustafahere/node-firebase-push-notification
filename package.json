    "firebase-admin": "^11.8.0",
    "prettier": "^2.8.8",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^5.0.4"
  },
  "homepage": "https://github.com/owner/project#readme",
  "bugs": {
    "url": "https://github.com/mustafahere/node-firebase-push-notification/issues"
